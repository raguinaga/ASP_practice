@page "{id?}"
@model EditProduct.Pages.EditProduct

@{
    ViewData["Title"] = "EditProduct";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<h1>Click Submit to send the model</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Product.Id"></label>
        <input class="form-control"
               asp-for="Product.Id" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input class="form-control"
               asp-for="Product.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Product.SellPrice"></label>
        <input class="form-control"
               asp-for="Product.SellPrice" />
    </div>
</form>

<h1>Click Submit to send a form with two models</h1>
<p>Binding two models is rare, so more work is needed to bind the models correctly and can't just use tag helpers</p>
<form asp-page-handler="EditTwoProducts">
    <div class="form-group">
        <label>Product 1 Id</label>
        <input class="form-control"
               name="p1.@nameof(Model.Product.Id)" />
    </div>
    <div class="form-group">
        <label>Product 1 Name</label>
        <input class="form-control"
               name="p1.@nameof(Model.Product.Name)" />
    </div>
    <div class="form-group">
        <label>Product 1 Sell Price</label>
        <input class="form-control"
               name="p1.@nameof(Model.Product.SellPrice)" />
    </div>
    <div class="form-group">
        <label>Product 2 Id</label>
        <input class="form-control"
               name="p2.@nameof(Model.Product.Id)" />
    </div>
    <div class="form-group">
        <label>Product 2 Name</label>
        <input class="form-control"
               name="p2.@nameof(Model.Product.Name)" />
    </div>
    <div class="form-group">
        <label>Product 2 Sell Price</label>
        <input class="form-control"
               name="p2.@nameof(Model.Product.SellPrice)" />
    </div>
    <button type="submit"
            class="btn btn-primary">
        Submit
    </button>
</form>
</body>
</html>